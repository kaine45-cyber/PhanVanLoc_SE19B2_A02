<Window x:Class="PhanVanLocWPF.CustomerLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Customer Login - FUMiniHotelSystem"
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="Account" Width="32" Height="32" Foreground="White"/>
                <TextBlock Text="Customer Login"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <Border Grid.Row="1" Background="White" Margin="40" CornerRadius="5" Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Email -->
                <TextBlock Grid.Row="0" Text="Email Address:" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBox x:Name="txtEmail" Grid.Row="1" 
                         Height="35" Padding="10,8" Margin="0,0,0,20"
                         materialDesign:HintAssist.Hint="Enter your email address"
                         materialDesign:HintAssist.IsFloating="True"/>

                <!-- Password -->
                <TextBlock Grid.Row="2" Text="Password:" FontWeight="Bold" Margin="0,0,0,10"/>
                <PasswordBox x:Name="txtPassword" Grid.Row="3" 
                             Height="35" Padding="10,8" Margin="0,0,0,20"
                             materialDesign:HintAssist.Hint="Enter your password"
                             materialDesign:HintAssist.IsFloating="True"/>

                <!-- Login Button -->
                <Button Grid.Row="4" 
                        Content="Login"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Height="40"
                        Click="LoginButton_Click"/>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Don't have an account? " FontSize="12"/>
                <Button Content="Register" 
                        Background="Transparent" 
                        Foreground="#2196F3"
                        FontSize="12"
                        Click="RegisterButton_Click"
                        Style="{x:Null}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

