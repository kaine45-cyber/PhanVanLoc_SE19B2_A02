<Window x:Class="PhanVanLocWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HotelSystem - Admin Panel" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="HotelSystem - Admin Panel" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                
                <Button Grid.Column="1" 
                       Content="Logout" 
                       Background="#FF5722" 
                       Foreground="White" 
                       Padding="15,5" 
                       Click="LogoutButton_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Menu -->
            <Border Grid.Column="0" Background="White" CornerRadius="5" Padding="10" Margin="0,0,10,0">
                <StackPanel>
                    <Button x:Name="CustomerButton" 
                           Content="Manage Customers" 
                           Height="40" 
                           Margin="0,5" 
                           Click="CustomerButton_Click"/>
                    
                    <Button x:Name="RoomButton" 
                           Content="Manage Rooms" 
                           Height="40" 
                           Margin="0,5" 
                           Click="RoomButton_Click"/>
                    
                    <Button x:Name="BookingButton" 
                           Content="Manage Bookings" 
                           Height="40" 
                           Margin="0,5" 
                           Click="BookingButton_Click"/>
                    
                    <Button x:Name="ReportButton" 
                           Content="Báo cáo" 
                           Height="40" 
                           Margin="0,5" 
                           Click="Report_Click"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Background="White" CornerRadius="5" Padding="20">
                <Grid x:Name="ContentGrid">
                    <TextBlock Text="Welcome to HotelSystem Admin Panel" 
                              FontSize="18" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center" 
                              Foreground="#666"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="10">
            <TextBlock Text="© 2024 FUMiniHotelSystem - Admin Panel" 
                      FontSize="10" 
                      HorizontalAlignment="Center" 
                      Foreground="#666"/>
        </Border>
    </Grid>
</Window>

