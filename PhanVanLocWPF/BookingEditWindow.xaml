                    <ComboBoxItem Content="Äang chá»" Tag="2"/>
                    <ComboBoxItem Content="ÄÃ£ há»§y" Tag="3"/>
                </ComboBox>
            </Grid>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="LÆ°u" 
                    Background="#4CAF50" 
                    Foreground="White"
                    Padding="10,5"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button Content="Há»§y" 
                    Background="#9E9E9E" 
