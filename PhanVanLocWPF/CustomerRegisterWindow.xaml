<Window x:Class="PhanVanLocWPF.CustomerRegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Customer Registration - FUMiniHotelSystem"
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="AccountPlus" Width="32" Height="32" Foreground="White"/>
                <TextBlock Text="Customer Registration"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Registration Form -->
        <Border Grid.Row="1" Background="White" Margin="40" CornerRadius="5" Padding="30">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Full Name -->
                    <TextBlock Grid.Row="0" Text="Full Name:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox x:Name="txtFullName" Grid.Row="1" 
                             Height="35" Padding="10,8" Margin="0,0,0,20"
                             materialDesign:HintAssist.Hint="Enter your full name"
                             materialDesign:HintAssist.IsFloating="True"/>

                    <!-- Email -->
                    <TextBlock Grid.Row="2" Text="Email Address:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox x:Name="txtEmail" Grid.Row="3" 
                             Height="35" Padding="10,8" Margin="0,0,0,20"
                             materialDesign:HintAssist.Hint="Enter your email address"
                             materialDesign:HintAssist.IsFloating="True"/>

                    <!-- Phone -->
                    <TextBlock Grid.Row="4" Text="Phone Number:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox x:Name="txtPhone" Grid.Row="5" 
                             Height="35" Padding="10,8" Margin="0,0,0,20"
                             materialDesign:HintAssist.Hint="Enter your phone number"
                             materialDesign:HintAssist.IsFloating="True"/>

                    <!-- Birthday -->
                    <TextBlock Grid.Row="6" Text="Birthday:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DatePicker x:Name="dpBirthday" Grid.Row="7" 
                               Height="35" Margin="0,0,0,20"/>

                    <!-- Password -->
                    <TextBlock Grid.Row="8" Text="Password:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <PasswordBox x:Name="txtPassword" Grid.Row="9" 
                                 Height="35" Padding="10,8" Margin="0,0,0,20"
                                 materialDesign:HintAssist.Hint="Enter your password"
                                 materialDesign:HintAssist.IsFloating="True"/>

                    <!-- Confirm Password -->
                    <TextBlock Grid.Row="10" Text="Confirm Password:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <PasswordBox x:Name="txtConfirmPassword" Grid.Row="11" 
                                 Height="35" Padding="10,8" Margin="0,0,0,30"
                                 materialDesign:HintAssist.Hint="Confirm your password"
                                 materialDesign:HintAssist.IsFloating="True"/>

                    <!-- Register Button -->
                    <Button Grid.Row="12" 
                            Content="Register"
                            Background="#4CAF50"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            Height="40"
                            Click="RegisterButton_Click"/>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Already have an account? " FontSize="12"/>
                <Button Content="Login" 
                        Background="Transparent" 
                        Foreground="#2196F3"
                        FontSize="12"
                        Click="LoginButton_Click"
                        Style="{x:Null}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

