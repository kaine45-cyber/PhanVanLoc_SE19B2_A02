<Window x:Class="PhanVanLocWPF.CustomerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Customer" 
        Height="500" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <TextBlock x:Name="HeaderText" 
                      Text="Add Customer" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <Border Grid.Row="1" Background="White" Margin="20" CornerRadius="5" Padding="30">
            <StackPanel>
                <TextBlock Text="Full Name:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="FullNameTextBox" 
                        Height="35" 
                        Margin="0,0,0,15" 
                        Padding="10"/>

                <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" 
                        Height="35" 
                        Margin="0,0,0,15" 
                        Padding="10"/>

                <TextBlock Text="Telephone:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="TelephoneTextBox" 
                        Height="35" 
                        Margin="0,0,0,15" 
                        Padding="10"/>

                <TextBlock Text="Birthday:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <DatePicker x:Name="BirthdayDatePicker" 
                           Height="35" 
                           Margin="0,0,0,15"/>

                <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                            Height="35" 
                            Margin="0,0,0,20" 
                            Padding="10"/>

                <TextBlock x:Name="ErrorMessageText" 
                          Foreground="Red" 
                          HorizontalAlignment="Center" 
                          Visibility="Collapsed" 
                          Margin="0,0,0,10"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="SaveButton" 
                       Content="Save" 
                       Width="80" 
                       Height="35" 
                       Background="#4CAF50" 
                       Foreground="White" 
                       FontWeight="Bold" 
                       Click="SaveButton_Click" 
                       Margin="0,0,10,0"/>
                
                <Button x:Name="CancelButton" 
                       Content="Cancel" 
                       Width="80" 
                       Height="35" 
                       Background="#F44336" 
                       Foreground="White" 
                       FontWeight="Bold" 
                       Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

